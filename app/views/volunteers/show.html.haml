.row
	.eight.columns
		%h2= @volunteer.name

		- if @volunteer.email
			%p
				%b Email:
				= @volunteer.email
	.four.columns
		.panel.quick-stats
			%ul
				%li= "#{pluralize(@volunteer.shops.count, 'shop')} worked"
				%li= "#{pluralize(@volunteer.sessions.collect{|x| x.hours_worked}.inject{|sum,x| sum + x }, 'hour')} total"


	.twelve.columns
		%hr

		- if @volunteer.sessions.count > 0
			%h3 Sessions worked
			%table
				%tr
					%th Shop
					%th Time
					%th Hours worked
					%th Actions
				- @volunteer.sessions.each do |session|
					%tr
						%td= link_to 'Shop', session.shop
						%td= session.hours_worked
						%td= session.hours_worked
						%td= link_to 'edit', edit_session_path(session)
		- else
			%p No worked shops have been recorded
