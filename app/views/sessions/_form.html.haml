= form_for @session do |f|
	- if @session.errors.any?
		#error_explanation
			%h2= "#{pluralize(@session.errors.count, "error")} prohibited this session from being saved:"
			%ul
				- @session.errors.full_messages.each do |msg|
					%li= msg

	.volunteers
		= collection_select :session, :volunteer_id, Volunteer.all, :id, :email
	.shops
		= collection_select :session, :shop_id, Shop.all, :id, :starts_at
	.starts_at
		= f.label :starts_at
		= f.text_field :starts_at, :value => ( @session.starts_at ? @session.starts_at : "now" )
	.ends_at
		= f.label :ends_at
		= f.text_field :ends_at, :value => ( @session.ends_at ? @session.ends_at : "" )
	.actions
		= f.submit 'Save'
